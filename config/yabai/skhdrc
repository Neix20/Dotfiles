# Move Focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Toggle Window
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Maximize Window
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# Move Window (Split)
ctrl + alt - h : yabai -m window --swap west  || $(yabai -m window --display west; yabai -m display --focus west)
ctrl + alt - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
ctrl + alt - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
ctrl + alt - l : yabai -m window --swap east  || $(yabai -m window --display east; yabai -m display --focus east)

# Move Window to Prev and Next Workspace
ctrl + alt - p : yabai -m window --space prev;
ctrl + alt - n : yabai -m window --space next;

# Move Window (Workspace)
ctrl + alt - 1 : yabai -m window --space 1;
ctrl + alt - 2 : yabai -m window --space 2;
ctrl + alt - 3 : yabai -m window --space 3;
ctrl + alt - 4 : yabai -m window --space 4;
ctrl + alt - 5 : yabai -m window --space 5;
ctrl + alt - 6 : yabai -m window --space 6;

# Toggle Split
ctrl + alt - e : yabai -m window --toggle split

# Move Focus (Display)
alt + shift - 1  : yabai -m display --focus 1
alt + shift - 2  : yabai -m display --focus 2

# Flpi Along Y-Axis
ctrl + alt - y : yabai -m space --mirror y-axis

# Flip along X-axis
ctrl + alt - x : yabai -m space --mirror x-axis